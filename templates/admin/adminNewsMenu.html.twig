{% extends 'base/baseAdmin.html.twig' %}

{% block main %}

    <h2>Liste des Actualites</h2>

    <a href="{{ path('news_form_insert') }}">
        <div class="buttonCreate">
            <p>Cr√©er une nouvelle actualite</p>
        </div>
    </a>

    <div class="adminTable">
    {% for oneNews in news %}

        <div class="adminTableInfo">

            <div class="infoBox">
                <p>{{ oneNews.date|date("d/m/Y") }}</p>
                <p>{{ oneNews.title }}</p>
            </div>

            <div class="imagesBox">
                {% for image in oneNews.images %}
                    <div class="adminImg">
                        <img src="{{ asset('assets/img/upload') }}/{{ image.title }}" class="imgFluid">
                    </div>
                {% endfor %}
            </div>

            <div class="buttonBox">

                <a href="{{ path('admin_menu_images') }}" class="buttonAdd"><p>Ajouter une image</p></a>

                <a href="{{ path('news_form_update', {'id': oneNews.id}) }} " class="buttonUpdate"><p>Modifier</p></a>

                <a href="{{ path('news_delete', {'id': oneNews.id}) }} " class="buttonDelete"><p>Supprimer</p></a>

            </div>

        </div>
    {% endfor %}
    </div>

{% endblock %}